<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#303030"
    android:layout_gravity="center"
    tools:context="com.example.admin.appbus1.fragment.InfoFoodFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/image_food"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:text="Click vào ảnh để xem vị trí trên map"
        android:gravity="center"
        android:id="@+id/guide"
        android:textSize="10sp"
        android:layout_below="@id/image_food"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/address_food"
        android:layout_below="@+id/name_food"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Address" />
    <TextView
        android:id="@+id/time_food"
        android:layout_below="@+id/address_food"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Time" />
    <TextView
        android:id="@+id/price_food"
        android:layout_below="@+id/time_food"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Price" />
    <ImageView
        android:id="@+id/iv_fp"
        android:layout_below="@+id/price_food"
        android:textColor="#FFFFFF"
        android:background="@drawable/fb_share"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/name_food"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Name"
        android:layout_below="@+id/guide"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
